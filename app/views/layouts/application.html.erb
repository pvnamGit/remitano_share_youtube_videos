<!DOCTYPE html>
<html>
  <head>
    <title>Remitano Share Youtube Videos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> 
  </head>

  <body>
    <header class="header">
      <h2><%= link_to 'Funny Movies', root_path %></h2>
      <div class="right-header">
        <% if current_user %>
          <button class="btn btn-share-video"><%= button_to 'My shared video', my_videos_path, method: :get %></button>
          <button class="btn btn-share-video"><%= button_to 'Share video', share_path, method: :get %></button>
          <p>Welcome <%= current_user.username %>!</p>
          <button class="btn btn-logout"><%= button_to 'Logout', logout_path, method: :delete %></button>
        <% else %>
          <button class="btn btn-login"><%= button_to 'Login', login_path, method: :get %></button>
          <button class="btn btn-signup"><%= button_to 'Signup', signup_path, method: :get %></button>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>

